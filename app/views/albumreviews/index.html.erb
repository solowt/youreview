<h2 class="title">
  All Album Reviews
  <%=link_to "(+)", new_work_path%>
</h2>
<ul>
  <%@reviews.each do |review|%>
    <div class="albumlist">
      <li class>
        <a href=<%="/albumreviews/#{review.id}"%>> <!-- NHO: Could we utilize rails link_to helpers here? --> 
          <img class="smallaimg" src=<%=review.photo_url%>>
        </a>
        <%= rating_for review, "Helpfulness", :disable_after_rate => false, star_path: '/images/ratyrate' %>
        <%="#{review.name.titleize} -- '#{review.title}' #{review.score}/10"%>
        <%="(#{review.user.email})"%>
      </li>
    </div>
  <%end%>
</ul>
